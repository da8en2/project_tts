<body class="blog_body">

  <p id="notice"><%= notice %></p>

  <div class="blog_page_contanier">

    <div class="blog_title">
      <h1>Blog Page</h1>
    </div>

    <div class="blog_posts_container">

      <% @posts.each do |post| %>
      <div class="blog_post">

        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="blog_post_title panel-title"><%= post.title %></div>
            <div class="blog_post_author label label-default"><%= post.author %></div>
            <div class="blog_post_time label label-default pull-right"><%= post.created_at.strftime("%A, %d %b %Y at %l:%M %p") %></div>
          </div>
          <div class="panel-body">
            <div class="blog_post_entry"><%= post.blog_entry.html_safe %></div>
          </div>
          <div class="panel-footer">
            <%= link_to "Comment on this post", root_path, class: "btn btn-info" %>
            <%#= link_to "Show", post, class: "btn btn-info" %>
            <%#= link_to "Edit", edit_post_path(post), class: "btn btn-warning" %>
            <%#= link_to "Delete", post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>

            <span class="pull-right clickable">
              <i class="glyphicon glyphicon-chevron-up"></i>
            </span>
          </div>
          <div class="panel-body comments-body">
            <div class="blog_post_comment">comments will go here</div>
          </div>
        </div>

      </div>
      <% end %>
      <%= link_to 'New Blog Post', new_post_path, class: "btn btn-default btn-lg btn-block" %>

    </div>

  </div>

</body>
